generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Post {
  slug  String @unique
  views Int    @default(0)
}

model Guestbook {
  id        Int       @id @default(autoincrement())
  email     String    @db.VarChar(255)
  body      String
  createdAt DateTime  @db.Timestamp(0)
}
